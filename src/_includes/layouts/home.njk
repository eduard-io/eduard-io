<!doctype html>
<html lang="en" x-data="{ theme: 'system' }">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml" />

    {% include "includes/_primary.njk" %}
    {% include "includes/_theme.njk" %}
    {% include "includes/_favicons.njk" %}
    {% include "includes/_social.njk" %}
    {% include "includes/_stylesheets.njk" %}
    {% include "includes/_scripts.njk" %}
    {% include "includes/_analytics.njk" %}
  </head>

  <body class="home">
    <header class="site-header">
      <a href="/" class="site-header__brand" aria-label="Home">
        <span class="site-header__title">Eduard Giménez</span>
      </a>

      {% include "components/_theme-toggle.njk" %}
    </header>

    <main>{{ content | safe }}</main>

    <footer class="site-footer">
      <a
        href="#"
        class="back-to-top"
        @click.prevent="window.scrollTo({ top: 0, behavior: 'smooth' })"
      >
        Back to top
      </a>

      <p class="copyright">&copy; 2014–2026 Eduard Giménez. All rights reserved.</p>
    </footer>
  </body>
</html>
